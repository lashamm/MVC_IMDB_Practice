@using MVC_IMDB_Practice.Models.Entities;
@using MVC_IMDB_Practice.Enums;
@model Movie
@{
}

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReleaseYear">Release Year</label>
        <input asp-for="ReleaseYear" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <select asp-for="Genre"
                asp-items="Html.GetEnumSelectList<Genre>()"
                class="form-control">
            <option value="">-- Select Genre --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Director">Director</label>
        <input asp-for="Director" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Duration">Duration (minutes)</label>
        <input asp-for="Duration" class="form-control" />
    </div>

    <button type="submit">Submit</button>
</form>


